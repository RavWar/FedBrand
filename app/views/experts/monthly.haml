%section.get-content_side-full.get-experts_block.get-shadow
  .container
    .get-relative
      .get-expert_action
        %form
          %label Выберите направление
          %select#expert-way
            %option Все эксперты
            %option Еще эксперты
            %option Еще эксперты2
        %p.link-abc= link_to 'По алфавиту', '#'

    .experts-switcher
      %h1= t 'pages.experts.experts'
      %ul
        %li= link_to 'Предыдущий месяц', '#', :title=>"Предыдущий месяц", :class=>'get-prev'
        %li.get-label
          %span= @date.month_i18n
        %li= link_to 'Следующий месяц', '#', :title=>"Следующий месяц", :class=>'get-next', :class=>'disabled'

    - @experts.group_by(&:category).each do |category, experts|
      .get-experts_category.get-gradient.items-3
        %h2= category.name
        = render partial: 'shared/experts', locals: { experts: experts }

  .get-pager.experts-pager
    %ul
      %li.get-link.get-prev_link= link_to t('pages.experts.experts')+' '+I18n.l(@date.prev_month, format: '%B').mb_chars.upcase.to_s, monthly_experts_path(@date.prev_month.month_path), :class=>'no-active'
      %li.get-link.get-next_link= link_to t('pages.experts.all_experts'), experts_path