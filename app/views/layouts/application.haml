%html.no-js{ :lang => "ru" }
  <!--<![endif]-->
  %head
    %meta{ :charset => "utf-8" }/
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}/
    = title
    = stylesheet_link_tag "application"
    %meta{:content=>"width=device-width, initial-scale=1.0", :name=>"viewport"}/
    /[if !IE 7]
      :css
        #wrapper {display:table;height:100%}
    /[if lt IE 9]
      = javascript_include_tag "http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"
    = javascript_include_tag "modernizr"
  %body{class: "#{controller_name}-#{action_name}"}
    #wrapper
      #main-layout
        - if flash[:notice]
          .alert.alert-success=flash[:notice]
        - if flash[:alert]
          .alert.alert-error=flash[:alert]
        %header#get-header
          .container
            .get-logo= link_to 'FedBrand', root_path
            .get-slogan
              %p= t 'pages.nav.slogan'
            .get-social
              %ul
                %li= link_to 'Facebook', '#', :class=>'get-facebook', :title=>'Facebook'
                %li= link_to 'Twitter', '#', :class=>'get-twitter', :title=>'Twitter'
                %li= link_to 'Youtube', '#', :class=>'get-youtube', :title=>'Youtube'
            = render 'shared/locale'
        = render 'shared/navbar'
        %section#get-rating_content
          .container= render :partial => 'shared/top_ratings'
        %section#get-main_content
          .container= yield
    %footer#get-footer
      .container
        %aside.pull-left
          %p
            &#169; ФедБренд &#151;
            = t 'pages.nav.footer'
        %aside.pull-right
          %p= link_to 'welcome@fedbrand.ru', 'mailto:welcome@fedbrand.ru'

  = include_gon watch: true
  %script{ type: 'text/javascript', src: 'http://www.google.com/jsapi' }
  = javascript_include_tag 'application'
