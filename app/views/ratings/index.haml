- content_for :stylesheets do
  = "#top_ratings { display: none }"

#rating_chart

#rating_dashboard
  %ul
    %li.checkbox &nbsp
    %li.position #
    %li.name= t 'pages.ratings.name'
    %li.emblem &nbsp
    %li.rating= t 'pages.ratings.rating'
    %li.change= t 'pages.ratings.change'

  - Rating.top.each_with_index do |rating, i|
    - change = Rating.last_month_ratings.map(&:region).index(rating.region) - i

    %ul.region
      %li.checkbox= check_box_tag 'region', rating.region.id
      %li.position= i+1
      %li.name= rating.region.name
      %li.emblem= image_tag rating.region.emblem.url(:icon)
      %li.rating= rating.value
      %li.change= change > 0 ? "+#{change}" : "#{change}"