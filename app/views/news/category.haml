%h2= @category.name
- unless @news.blank?
  - @news.each do |news|
    %h2= news.title
    .image= image_tag news.logo.url(:thumb) if news.logo.url(:thumb)
    .content_block
      .content= h truncate Sanitize.clean(news.content, remove_contents: ['h1','h2','h3','h4']), length: 400, separator: ' '
      = render partial: 'shared/tag_links', locals: { news: news }