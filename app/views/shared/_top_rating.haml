#title
  = t 'pages.home.top_rating'
  = link_to l(Rating.order('date DESC').first.date, format: '%B').mb_chars.upcase.to_s, '#'

#rating
  - i = 0
  - Rating.sum('ratings.value', group: 'regions.id', order: 'SUM(value) DESC', limit: 10).to_a.in_groups_of(5).each do |ratings|
    %ul.rating
      - ratings.each do |region_id, rating|
        - break unless region_id
        - i += 1
        = ratings_row i, Region.find(region_id).name, rating

#link= link_to t('pages.home.rating_link'), rating_path
        