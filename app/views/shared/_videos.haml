- content_for :video_modal do
  #videoModal.modal.hide.fade{:tabindex=>'-1', :role=>'dialog', 'aria-labelledby'=>'videoModalLabel', 'aria-hidden'=>'true'}
    .modal-body
      .iframe
    %header.modal-header
      // %button.close{:type=>'button', 'data-dismiss'=>'modal', 'aria-hidden'=>'true'} x
      %h3#videoModalLabel{ style: "text-align: center" }

%h2= t 'pages.videos.title'
- Video.limit(3).each do |video|
  %article.video
    %figure{ data: { iframe: video.tag, title: video.title }}
      %p= link_to image_tag(video.thumb), '#videoModal', :role=>'button', 'data-toggle'=>'modal' if video.thumb
      %figcaption
        %h3= link_to video.title, '#videoModal', :role=>'button', 'data-toggle'=>'modal'
%article{style: "margin-top:0"}
  %figcaption
    %h3= link_to t('pages.videos.all'), videos_news_index_path